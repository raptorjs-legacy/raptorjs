<raptor-taglib>

    <tag name="{shortNameDashSeparated}" handler-class="{longName}/{shortName}Renderer">
        <attribute name="name" type="string"/>
        <attribute name="count" type="integer"/>
        
        <!-- Support widget attributes -->
        <attribute name="id" uri="widgets"/>
        <attribute name="event-click" uri="widgets"/>
    </tag>
    
</raptor-taglib>